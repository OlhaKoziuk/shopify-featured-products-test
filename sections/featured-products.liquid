{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "product_collection",
      "label": "Choose the collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}


<section class="featured-products">
  <h2 class="featured-products__title">Featured Products</h2>
  
  <div class="featured-products__list">
    {% if section.settings.product_collection != blank %}
      {% for product in section.settings.product_collection.products %}
        <div class="featured-product">
          <img 
            src="{{ product.featured_image | img_url: '400x' }}" 
            alt="{{ product.title }}" 
            class="featured-product__image"
          >
          <h3 class="featured-product__title">{{ product.title }}</h3>
          <button 
            class="featured-product__button"
            data-product-id="{{ product.id }}"
            data-product-variant-id="{{ product.variants.first.id }}"
          >
            Add to cart â€” {{ product.price | money }}
          </button>
        </div>
      {% endfor %}
    {% else %}
      <p class="no-products">Please select a collection in the section settings.</p>
    {% endif %}
  </div>
</section>


